{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",

    "module": "ES2022",
    "moduleResolution": "Node",
    "target": "ES2022",

    "strict": true,
    "skipLibCheck": true,

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "sourceMap": true,
    "declaration": true,
    "resolveJsonModule": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
